{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es2017",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "removeComments": true,
    "strictFunctionTypes": false,
    "sourceMap": true,
    "allowUnreachableCode": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "baseUrl": "src/lib",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "exclude": ["node_modules", "dist"],
  "compileOnSave": false,
  "include": ["src/lib"]
}
